@model WebApplication1.Models.Kullanıcı

@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/icerikgoster.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()


    <table style="width:300px; color:azure; font-size:18px; margin:auto; height:200px;">
        <tr>
            <td style="">Kullanıcı Adı:</td>
            <td>
                @Html.EditorFor(model => model.kullaniciadi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kullaniciadi, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Şifre:</td>
            <td>

                @Html.EditorFor(model => model.sifre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sifre, "", new { @class = "text-danger" })
            </td>
        </tr>


        <tr>
            <td></td>
            <td>
                <input type="submit" value="Giriş" class="btn-group-vertical" style="background-color:azure; width:100px; margin-top:15px; margin-left:12px;   height:30px; color:black; text-align:center;" />
            </td>
        </tr>
    </table>

}
