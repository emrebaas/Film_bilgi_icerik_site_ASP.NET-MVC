@model WebApplication1.Models.Gelecek

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@using (Html.BeginForm("Edit", "AdminGelecek", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <table>


            <tr>
                <td align="center">Film Adı</td>
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.gelecek_adi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.gelecek_adi, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>



            <tr>
                <td align="center">Resim</td>
                <td>
                    <div class="col-md-10">
                        <input type="file" name="gelecek_resim" id="gelecek_resim" accept=".jpg,.png" class="form-control" />
                        @Html.ValidationMessageFor(model => model.gelecek_resim, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>



            <tr>
                <td align="center">Tarih</td>
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.gelecek_tarih, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.gelecek_tarih, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>


            <tr>
                <td align="center">Konu</td>
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.gelecek_konu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.gelecek_konu, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>



            <tr>
                <td align="center">Fragman</td>
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.gelecek_fragman, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.gelecek_fragman, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>

            <tr>
                <td colspan="2" style="padding-left:235px; padding-top:50px;">

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Kaydet" class="btn btn-default" />
                        </div>
                    </div>
                </td>
            </tr>
        </table>


    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>
