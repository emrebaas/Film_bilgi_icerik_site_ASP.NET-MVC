@model WebApplication1.Models.Haber

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@using (Html.BeginForm("Edit", "AdminHaber", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <table>

            <tr>
                <td align="center">Haber Başlık</td>
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.haber_baslik, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.haber_baslik, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>


            <tr>
                <td align="center">Konu</td>
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.haber_aciklama, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.haber_aciklama, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>


            <tr>
                <td align="center">Resim</td>
                <td>
                    <div class="col-md-10">
                        <input type="file" name="haber_resim" id="haber_resim" accept=".jpg,.png" class="form-control" />
                        @Html.ValidationMessageFor(model => model.haber_resim, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>



            <tr>
                <td colspan="2" style="padding-left:190px; padding-top:50px;">

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Haber Oluştur" class="btn btn-default" style="background-color:cadetblue" />
                        </div>
                    </div>
                </td>
            </tr>
        </table>



    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>