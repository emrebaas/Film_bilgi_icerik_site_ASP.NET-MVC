                    </div>

                    @Html.Action("BesKomedi", "Home")

                    <div class="cl">&nbsp;</div>
                </div>


                <div class="box">
                    <div class="head">
                        <h3>Korku Kategorisi</h3>
                        <p class="text-right"><a href="/Home/Korku">Tümünü Gör</a></p>
                    </div>

                    @Html.Action("BesKorku", "Home")

                    <div class="cl">&nbsp;</div>
                </div>
          
            
                <div class="box">
                    <div class="head">
                        <h3>Macera Kategorisi</h3>
                        <p class="text-right"><a href="/Home/Macera">Tümünü Gör</a></p>
                    </div>

                    @Html.Action("BesMacera", "Home")

                    <div class="cl">&nbsp;</div>
                </div>

                <div class="box">
