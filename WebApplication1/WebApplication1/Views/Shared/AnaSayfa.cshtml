                    </div>

                    @Html.Action("BesSavas", "Home")

                    <div class="cl">&nbsp;</div>
                </div>
            
            
            
              </div>
            <div id="news">
                <div class="head">
                    <h2><strong>Haberler</strong></h2>
                    <p class="text-right"><a href="/Home/Haber">Tümünü Gör</a></p>
                </div>
                <div class="content">
                    @Html.Action("SonİkiHaber", "Home")

                </div>
            </div>
            <div id="coming">
                <div class="head">
                    <h2>Yakında Gelecek Olanlar</h2>
                    <p class="text-right"><a href="/Home/Gelecek">Tümünü Gör</a></p>
                </div>
                <div class="content">
                   @Html.Action("SonİkiGelecek", "Home")

                </div>
               
            </div>
            <div class="cl">&nbsp;</div>
        </div>
        <div id="footer">
            <p class="lf">Copyright &copy; 2017 <a href="#">www.ayaklisinema.com</a> - Tüm Hakları Saklıdır</p>
            <p class="rf">Design by <a href="www.facebook.com/emrebaas">EMRE BAŞ</a></p>
            <div style="clear:both;"></div>
        </div>
    </div>
   


</body>
</html>
